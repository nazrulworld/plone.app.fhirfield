<?xml version="1.0"?>
<registry>
    <record name="fhirfield.es.index.mapping.nested_fields.limit"
            field="nested_fields_limit">
        <field type="plone.registry.field.Int">
            <title>Index Mapping nested_fields</title>
        </field>
        <value>100</value>
    </record>
    <record name="fhirfield.es.index.mapping.depth.limit"
            field="depth_limit">
        <field type="plone.registry.field.Int">
            <title>Index Mapping depth</title>
        </field>
        <value>20</value>
    </record>
    <record name="fhirfield.es.index.mapping.total_fields.limit"
            field="total_fields_limit">
        <field type="plone.registry.field.Int">
            <title>Index Mapping total_fields</title>
        </field>
        <value>1000</value>
    </record>

    <records prefix="plone.resources/fhirfield-json-viewer-js"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="js">++plone++plone.app.fhirfield/js/jquery.json-viewer.js</value>
        <value key="deps">jquery</value>
    </records>

    <records prefix="plone.resources/fhirfield-json-viewer-style"
             interface='Products.CMFPlone.interfaces.IResourceRegistry'>
        <value key="css">
            <element>++plone++plone.app.fhirfield/css/jquery.json-viewer.css</element>
        </value>
    </records>
</registry>
